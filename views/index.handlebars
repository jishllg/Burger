<h1>Eat the Burger!</h1>

<h2>Available Burgers:</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
        {{name}}

        <button class="devour" data-id="{{id}}">
            Devour!
        </button>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burger Heaven (Rest in Beef):</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>{{name}}</li>
    {{/if}}
  {{/each}}
</ul>

<h2>Make a Burger:</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burgerName">Burger Name:</label>
    <input type="text" id="burgerName" name="name">
  </div>

  <button type="submit">Make Burger</button>
</form>
